include <../lib/common.scad>


//--------------------------------------------------------------------------------------------------
module board0()
{
    color([0, 1, 0])
    cube([26, 14.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module board1()
{
    color([0.5, 0.5, 0])
    cube([16, 14.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module board2()
{
    color([0.8, 0.5, 0])
    cube([20, 14.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module stud()
{
    color([1, 0, 0])
    cube([7.5, 0.75, 60.75]);
}

//--------------------------------------------------------------------------------------------------
module base()
{
    color([0, 0, 1])
    cube([30, 0.75, 3.5]);
}

//--------------------------------------------------------------------------------------------------
module base_bar()
{
    color([0, 1, 1])
    cube([16, 0.75, 3.5]);
}

//--------------------------------------------------------------------------------------------------
module bowl()
{
    color([0.8, 0.8, 0.2])
    cylinder(1, 2.25, 2.25, false);
}

//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
translate([0, 0, 0])
{
    translate([11, 0, 0])
    {
        //----------------------------------------------------------------------------------------------
        // level 1
        //----------------------------------------------------------------------------------------------
        translate([-9, 0.75, 12])
        {
            board0();
        }

        //----------------------------------------------------------------------------------------------
        // level 2
        //----------------------------------------------------------------------------------------------
        translate([-8.5, 0.75, 24])
        {
            board1();
        }

        //----------------------------------------------------------------------------------------------
        // level 3
        //----------------------------------------------------------------------------------------------
        translate([0, 0.75, 36])
        {
            board2();
        }

        //----------------------------------------------------------------------------------------------
        // level 4
        //----------------------------------------------------------------------------------------------
        translate([-12.5, 0.75, 48])
        {
            board2();
        }

        //----------------------------------------------------------------------------------------------
        // level 5
        //----------------------------------------------------------------------------------------------
        translate([0, 0.75, 60])
        {
            board0();
        }

        //----------------------------------------------------------------------------------------------
        // bowl
        //----------------------------------------------------------------------------------------------
        translate([12, 5, 36.3])
        {
            bowl();
        }

        //----------------------------------------------------------------------------------------------
        // stud 0
        //----------------------------------------------------------------------------------------------
        translate([0, 0, 0])
        {
            rotate([0, 0, 0])
            {
                stud();
            }
        }

        //----------------------------------------------------------------------------------------------
        // stud 1
        //----------------------------------------------------------------------------------------------
        translate([0, 15.25, 0])
        {
            rotate([0, 0, 0])
            {
                stud();
            }
        }
    }

    //----------------------------------------------------------------------------------------------
    // base 0
    //----------------------------------------------------------------------------------------------
    translate([0, -0.75, 0])
    {
        rotate([0, 0, 0])
        {
            base();
        }
    }

    //----------------------------------------------------------------------------------------------
    // base 1
    //----------------------------------------------------------------------------------------------
    translate([0, 16, 0])
    {
        rotate([0, 0, 0])
        {
            base();
        }
    }

    //----------------------------------------------------------------------------------------------
    // base bar 0
    //----------------------------------------------------------------------------------------------
    translate([11, 0, 0])
    {
        rotate([0, 0, 90])
        {
            base_bar();
        }
    }

    //----------------------------------------------------------------------------------------------
    // base bar 1
    //----------------------------------------------------------------------------------------------
    translate([19.25, 0, 0])
    {
        rotate([0, 0, 90])
        {
            base_bar();
        }
    }
}

//--------------------------------------------------------------------------------------------------
// Draw Parts
//--------------------------------------------------------------------------------------------------
translate([0, -40, 0])
{
    //----------------------------------------------------------------------------------------------
    // board0
    translate([0, 0, 0])
    {
        board0();

        translate([0, -2, 0])
        {
            arrow_x(26);
        };

        translate([-1, 0, 0])
        {
            arrow_y(14.5);
        };
    };

    //----------------------------------------------------------------------------------------------
    // board1
    translate([30, 0, 0])
    {
        board1();

        translate([0, -2, 0])
        {
            arrow_x(16);
        };

        translate([-1, 0, 0])
        {
            arrow_y(14.5);
        };
    };

    //----------------------------------------------------------------------------------------------
    // board2
    translate([50, 0, 0])
    {
        board2();

        translate([0, -2, 0])
        {
            arrow_x(20);
        };

        translate([-1, 0, 0])
        {
            arrow_y(14.5);
        };
    };

    //----------------------------------------------------------------------------------------------
    // stud
    translate([74, 0, 0])
    {
        rotate([270, 0, 0])
        {
            stud();
        }

        translate([0, -2, 0])
        {
            arrow_x(7.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(60.75);
        };
    };

    //----------------------------------------------------------------------------------------------
    // base
    translate([88, 0, 0])
    {
        rotate([90, 0, 90])
        {
            base();
        }

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(30);
        };
    };

    //----------------------------------------------------------------------------------------------
    // base bar
    translate([100, 0, 0])
    {
        rotate([90, 0, 90])
        {
            base_bar();
        }

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(20.5);
        };
    };
}