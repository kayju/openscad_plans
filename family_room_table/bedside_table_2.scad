include <../lib/common.scad>

//--------------------------------------------------------------------------------------------------
module top_board()
{
    color([0, 0, 1])
    cube([10, 56, 1.5]);
}

//--------------------------------------------------------------------------------------------------
module top_board_wing()
{
    color([0, 1, 0])
    cube([3.5, 23, 1.5]);
}

//--------------------------------------------------------------------------------------------------
module leg()
{
    color([1, 0, 0])
    cube([3.5, 22, 3.5]);
}

//--------------------------------------------------------------------------------------------------
module support_l()
{
    color([1, 1, 0])
    cube([3.5, 56, 1.5]);
}

//--------------------------------------------------------------------------------------------------
module support_s()
{
    color([0, 1, 1])
    cube([3.5, 23, 1.5]);
}

//--------------------------------------------------------------------------------------------------
module support_m()
{
    color([1, 0, 1])
    cube([3.5, 25, 1.5]);
}



//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
*translate([0, 0, 0])
{
    //----------------------------------------------------------------------------------------------
    // Top board
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 20.5])
    {
        rotate([0, 0, 0])
        {
            top_board();
        }
    };

    translate([10, 0, 20.5])
    {
        rotate([0, 0, 0])
        {
            top_board();
        }
    };

    translate([20, 0, 20.5])
    {
        rotate([0, 0, 0])
        {
            top_board();
        }
    };

    translate([3.5, 0, 20.5])
    {
        rotate([0, 0, -90])
        {
            top_board_wing();
        }
    };

    translate([3.5, 59.5, 20.5])
    {
        rotate([0, 0, -90])
        {
            top_board_wing();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Legs
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 0])
    {
        rotate([90, 0, 0])
        {
            leg();
        }
    };

    translate([26.5, 0, 0])
    {
        rotate([90, 0, 0])
        {
            leg();
        }
    };

    translate([0, 59.5, 0])
    {
        rotate([90, 0, 0])
        {
            leg();
        }
    };

    translate([26.5, 59.5, 0])
    {
        rotate([90, 0, 0])
        {
            leg();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Supports
    //----------------------------------------------------------------------------------------------
    translate([1, 0, 20.5])
    {
        rotate([0, 90, 0])
        {
            support_l();
        }
    };

    translate([27.5, 0, 20.5])
    {
        rotate([0, 90, 0])
        {
            support_l();
        }
    };

    translate([26.5, -2.5, 20.5])
    {
        rotate([0, 90, 90])
        {
            support_s();
        }
    };

    translate([26.5, 57, 20.5])
    {
        rotate([0, 90, 90])
        {
            support_s();
        }
    };

    translate([27.5, 20, 20.5])
    {
        rotate([0, 90, 90])
        {
            support_m();
        }
    };

    translate([27.5, 41, 20.5])
    {
        rotate([0, 90, 90])
        {
            support_m();
        }
    };
}

//--------------------------------------------------------------------------------------------------
// Draw Parts
//--------------------------------------------------------------------------------------------------
translate([0, -80, 0])
{
    translate([0, 0, 0])
    {
        top_board();

        translate([0, -2, 0])
        {
            arrow_x(10);
        };

        translate([-2, 0, 0])
        {
            arrow_y(56);
        };
    };

    translate([17, 0, 0])
    {
        top_board_wing();

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-2, 0, 0])
        {
            arrow_y(23);
        };
    };

    translate([27, 0, 0])
    {
        leg();

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-2, 0, 0])
        {
            arrow_y(22);
        };
    };

    translate([37, 0, 0])
    {
        support_l();

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-2, 0, 0])
        {
            arrow_y(56);
        };
    };

    translate([47, 0, 0])
    {
        support_s();

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-2, 0, 0])
        {
            arrow_y(23);
        };
    };

    translate([57, 0, 0])
    {
        support_m();

        translate([0, -2, 0])
        {
            arrow_x(3.5);
        };

        translate([-2, 0, 0])
        {
            arrow_y(25);
        };
    };
}
