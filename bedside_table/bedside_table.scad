include <../lib/common.scad>


//--------------------------------------------------------------------------------------------------
module top_board()
{
    color([0, 0, 1])
    cube([14, 18, 2]);
}

//--------------------------------------------------------------------------------------------------
module support_x()
{
    color([1, 1, 0])
    cube([2, 16, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module support_y()
{
    color([1, 0, 1])
    cube([2, 10.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module mid_panel()
{
    color([0, 1, 1])
    cube([12, 19, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module leg()
{
    color([1, 0, 0])
    parallelogram(2.5, 18, 0.75, 3);
}


//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
translate([0, 0, 0])
{
    //----------------------------------------------------------------------------------------------
    // Top board
    //----------------------------------------------------------------------------------------------
    translate([0, 1, 18])
    {
        rotate([0, 0, 0])
        {
            top_board();
        }
    };

    // Support x1
    translate([1.75, 2, 16])
    {
        rotate([0, -90, 0])
        {
            support_x();
        }
    }

    // Support x2
    translate([13, 2, 16])
    {
        rotate([0, -90, 0])
        {
            support_x();
        }
    }

    // Support y1
    translate([1.75, 2, 16])
    {
        rotate([0, -90, -90])
        {
            support_y();
        }
    }

    // Support y2
    translate([1.75, 17.25, 16])
    {
        rotate([0, -90, -90])
        {
            support_y();
        }
    }

    // Leg 1
    translate([0.25, -0.5, 0])
    {
        rotate([90, 0, 90])
        {
            leg();
        }
    }

    // Leg 2
    translate([1, 20.5, 0])
    {
        rotate([90, 0, 270])
        {
            leg();
        }
    }

    // Leg 3
    translate([13, -0.5, 0])
    {
        rotate([90, 0, 90])
        {
            leg();
        }
    }

    // Leg 4
    translate([13.75, 20.5, 0])
    {
        rotate([90, 0, 270])
        {
            leg();
        }
    }

    //----------------------------------------------------------------------------------------------
    // Mid panel
    //----------------------------------------------------------------------------------------------
    translate([1, 0.5, 6])
    {
        rotate([0, 0, 0])
        {
            mid_panel();
        }
    };
}


//--------------------------------------------------------------------------------------------------
// Draw Parts
//--------------------------------------------------------------------------------------------------
translate([0, -40, 0])
{
    //----------------------------------------------------------------------------------------------
    // Top board
    translate([0, 0, 0])
    {
        top_board();

        translate([0, 19, 0])
        {
            arrow_x(14);
        };

        translate([-1, 0, 0])
        {
            arrow_y(18);
        };
    };

    // Support X
    translate([20, 0, 0])
    {
        support_x();

        translate([0, 17, 0])
        {
            arrow_x(2);
        };

        translate([-1, 0, 0])
        {
            arrow_y(16);
        };
    };

    // Support Y
    translate([30, 0, 0])
    {
        support_y();

        translate([0, 11.5, 0])
        {
            arrow_x(2);
        };

        translate([-1, 0, 0])
        {
            arrow_y(10.5);
        };
    };

    // Mid panel
    translate([40, 0, 0])
    {
        mid_panel();

        translate([0, 20, 0])
        {
            arrow_x(12);
        };

        translate([-1, 0, 0])
        {
            arrow_y(19);
        };
    };

    // Leg
    translate([60, 0, 0])
    {
        leg();

        translate([0, 22, 0])
        {
            arrow_x(3);
        };

        translate([-1, 0, 0])
        {
            arrow_y(18);
        };
    };


}
