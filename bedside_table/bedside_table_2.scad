include <../lib/common.scad>

//--------------------------------------------------------------------------------------------------
module top_board()
{
    color([0, 0, 1])
    cube([18, 18, 2]);
}

//--------------------------------------------------------------------------------------------------
module back_panel()
{
    color([1, 0, 0])
    cube([16, 14, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module side_panel()
{
    color([0, 1, 0])
    cube([18, 18, 2]);
}

//--------------------------------------------------------------------------------------------------
module mid_panel()
{
    color([0, 1, 1])
    cube([17.25, 14, 2]);
}

//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
translate([0, 0, 0])
{
    //----------------------------------------------------------------------------------------------
    // Top board
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 18])
    {
        rotate([0, 0, 0])
        {
            top_board();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Left panel
    //----------------------------------------------------------------------------------------------
    translate([0, 2, 0])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Right panel
    //----------------------------------------------------------------------------------------------
    translate([0, 18, 0])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Mid panel
    //----------------------------------------------------------------------------------------------
    translate([0.75, 2, 2])
    {
        rotate([0, 0, 0])
        {
            mid_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Mid panel
    //----------------------------------------------------------------------------------------------
    translate([0.75, 2, 11])
    {
        rotate([0, 0, 0])
        {
            mid_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Back panel
    //----------------------------------------------------------------------------------------------
    translate([0, 2, 18])
    {
        rotate([0, 90, 0])
        {
            back_panel();
        }
    };
}

