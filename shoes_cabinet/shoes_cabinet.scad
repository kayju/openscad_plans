include <../lib/common.scad>

//--------------------------------------------------------------------------------------------------
module top_panel()
{
    color([1, 0, 0])
    cube([11.25, 36, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module bottom_panel()
{
    color([0, 1, 1])
    cube([10.5, 36, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module side_panel()
{
    color([0, 1, 0])
    cube([10.5, 34.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module board()
{
    color([0, 0, 1])
    cube([10.5, 26.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module back_panel()
{
    color([1, 1, 0])
    cube([9, 35.25, 0.75]);
}

//--------------------------------------------------------------------------------------------------
// 18 X 37.5
module door()
{
    translate([0, 3, 0])
    {
        color([1, 0, 1])
        cube([3, 30, 0.75]);
    }

    translate([15, 3, 0])
    {
        color([1, 0, 1])
        cube([3, 30, 0.75]);
    }

    translate([0, 0, 0])
    {
        color([1, 0.5, 0.5])
        cube([18, 3, 0.75]);
    }

    translate([0, 33, 0])
    {
        color([1, 0.5, 0.5])
        cube([18, 3, 0.75]);
    }

    translate([3, 3, 0])
    {
        color([0, 0, 1])
        cube([12, 10, 0.75]);
    }

    translate([3, 13, 0])
    {
        color([0, 0, 0.5])
        cube([12, 10, 0.75]);
    }

    translate([3, 23, 0])
    {
        color([0, 0, 1])
        cube([12, 10, 0.75]);
    }
}

//--------------------------------------------------------------------------------------------------
// Draw Parts
//--------------------------------------------------------------------------------------------------
translate([0, -60, 0])
{
    //----------------------------------------------------------------------------------------------
    // Top panel
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 0])
    {
        top_panel();

        translate([0, 37, 0])
        {
            arrow_x(11.25);
        };

        translate([-1, 0, 0])
        {
            arrow_y(36);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Bottom panel
    //----------------------------------------------------------------------------------------------
    translate([20, 0, 0])
    {
        bottom_panel();

        translate([0, 37, 0])
        {
            arrow_x(10.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(36);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Side panel
    //----------------------------------------------------------------------------------------------
    translate([40, 0, 0])
    {
        side_panel();

        translate([0, 36, 0])
        {
            arrow_x(10.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(34.5);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Board
    //----------------------------------------------------------------------------------------------
    translate([60, 0, 0])
    {
        board();

        translate([0, 28, 0])
        {
            arrow_x(10.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(26.5);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Back panel
    //----------------------------------------------------------------------------------------------
    translate([80, 0, 0])
    {
        back_panel();

        translate([0, 37, 0])
        {
            arrow_x(9);
        };

        translate([-1, 0, 0])
        {
            arrow_y(35.25);
        };
    }

    //----------------------------------------------------------------------------------------------
    // Door
    //----------------------------------------------------------------------------------------------
    translate([100, 0, 0])
    {
        door();

        translate([0, 37, 0])
        {
            arrow_x(3);
        };

        translate([0, 39, 0])
        {
            arrow_x(18);
        };

        translate([-3, 0, 0])
        {
            arrow_y(36);
        };

        translate([-1, 0, 0])
        {
            arrow_y(3);
        };

        translate([-1, 13, 0])
        {
            arrow_y(10);
        };
    };
}


//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
translate([0, 0, 0])
{
    //----------------------------------------------------------------------------------------------
    // Top panel
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 35.25])
    {
        rotate([0, 0, 0])
        {
            top_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Bottom panel
    //----------------------------------------------------------------------------------------------
    translate([0.75, 0, 0])
    {
        rotate([0, 0, 0])
        {
            bottom_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Left side panel
    //----------------------------------------------------------------------------------------------
    translate([0.75, 0.75, 0.75])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Right side panel
    //----------------------------------------------------------------------------------------------
    translate([0.75, 36, 0.75])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Mid side panel
    //----------------------------------------------------------------------------------------------
    translate([0.75, 8.75, 0.75])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Board 0
    //----------------------------------------------------------------------------------------------
    translate([0.75, 8.75, 11])
    {
        rotate([0, 0, 0])
        {
            board();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Board 1
    //----------------------------------------------------------------------------------------------
    translate([0.75, 8.75, 19])
    {
        rotate([0, 0, 0])
        {
            board();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Board 2
    //----------------------------------------------------------------------------------------------
    translate([0.75, 8.75, 27])
    {
        rotate([0, 0, 0])
        {
            board();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Back panel 0
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 0])
    {
        rotate([90, 0, 90])
        {
            back_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Back panel 1
    //----------------------------------------------------------------------------------------------
    translate([0, 9, 0])
    {
        rotate([90, 0, 90])
        {
            back_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Back panel 2
    //----------------------------------------------------------------------------------------------
    translate([0, 18, 0])
    {
        rotate([90, 0, 90])
        {
            back_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Back panel 3
    //----------------------------------------------------------------------------------------------
    translate([0, 27, 0])
    {
        rotate([90, 0, 90])
        {
            back_panel();
        }
    };


    //----------------------------------------------------------------------------------------------
    // L Door
    //----------------------------------------------------------------------------------------------
    translate([11.25, 0, 0])
    {
        rotate([90, 0, 45])
        {
            door();
        }
    };

    //----------------------------------------------------------------------------------------------
    // R Door
    //----------------------------------------------------------------------------------------------
    translate([11.25, 18, 0])
    {
        rotate([90, 0, 90])
        {
            door();
        }
    };
}

