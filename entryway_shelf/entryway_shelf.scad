include <../lib/common.scad>

//--------------------------------------------------------------------------------------------------
module back_panel()
{
    color([1, 0, 0])
    cube([10, 28, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module top_board()
{
    color([0,1,1])
    cube([4, 28, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module front_panel()
{
    color([0,0,1])
    cube([2, 28, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module side_panel()
{
    color([0, 1, 0])
    rect_cut(5.5, 10.25, 0.75, 0.75, 8.25);
}

//--------------------------------------------------------------------------------------------------
// Draw Parts
//--------------------------------------------------------------------------------------------------
translate([0, -40, 0])
{
    //----------------------------------------------------------------------------------------------
    // Back panel
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 0])
    {
        back_panel();

        translate([0, 29, 0])
        {
            arrow_x(10);
        };

        translate([-1, 0, 0])
        {
            arrow_y(28);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Top board
    //----------------------------------------------------------------------------------------------
    translate([15, 0, 0])
    {
        top_board();

        translate([0, 29, 0])
        {
            arrow_x(4);
        };

        translate([-1, 0, 0])
        {
            arrow_y(28);
        }
    };

    //----------------------------------------------------------------------------------------------
    // Front panel
    //----------------------------------------------------------------------------------------------
    translate([25, 0, 0])
    {
        front_panel();

        translate([0, 29, 0])
        {
            arrow_x(2);
        };

        translate([-1, 0, 0])
        {
            arrow_y(28);
        }
    };

    //----------------------------------------------------------------------------------------------
    // Left panel
    //----------------------------------------------------------------------------------------------
    translate([33, 0, 0])
    {
        side_panel();

        translate([0, 11.25, 0])
        {
            arrow_x(5.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(10.25);
        };

        translate([0, -2, 0])
        {
            arrow_x(0.75);
        };

        translate([8, 8.25, 0])
        {
            arrow_y(2);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Right panel
    //----------------------------------------------------------------------------------------------
    translate([46, 0, 0])
    {
        side_panel();

        translate([0, 11.25, 0])
        {
            arrow_x(5.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(10.25);
        }

        translate([0, -2, 0])
        {
            arrow_x(0.75);
        };

        translate([8, 8.25, 0])
        {
            arrow_y(2);
        };
    };
}


//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
translate([0, 0, 0])
{
    //----------------------------------------------------------------------------------------------
    // Back panel
    //----------------------------------------------------------------------------------------------
    translate([-0.75, 0, 10])
    {
        rotate([0, 90, 0])
        {
            back_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Top board
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 9.25])
    {
        top_board();
    };

    //----------------------------------------------------------------------------------------------
    // Front panel
    //----------------------------------------------------------------------------------------------
    translate([4, 0, 10.25])
    {
        rotate([0, 90, 0])
        {
            front_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Left panel
    //----------------------------------------------------------------------------------------------
    translate([-0.75, 0, 0])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Right panel
    //----------------------------------------------------------------------------------------------
    translate([-0.75, 28.75, 0])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };
}

