//--------------------------------------------------------------------------------------------------
module back_leg_l()
{
    translate([0, 0, 0])
    {
        back_leg_1();
    }

    translate([0, 17, 1.5])
    {
        back_leg_2();
    }

    translate([0, 0, 1.5])
    {
        front_leg_1();
    }
}

//--------------------------------------------------------------------------------------------------
module back_leg_r()
{
    translate([0, 0, 1.5])
    {
        back_leg_1();
    }

    translate([0, 17, 0])
    {
        back_leg_2();
    }

    translate([0, 0, 0])
    {
        front_leg_1();
    }
}

//--------------------------------------------------------------------------------------------------
module front_leg_l()
{
    translate([0, 0, 1.5])
    {
        front_leg_1();
    }

    translate([4.5, 0, 0])
    {
        rotate([0, -90, 0])
        {
            front_leg_1();
        }
    }

    translate([0, 0, 0])
    {
        front_leg_2();
    }
}

//--------------------------------------------------------------------------------------------------
module front_leg_r()
{
    translate([0, 0, 0])
    {
        front_leg_1();
    }

    translate([4.5, 0, 0])
    {
        rotate([0, -90, 0])
        {
            front_leg_1();
        }
    }

    translate([0, 0, 1.5])
    {
        front_leg_2();
    }
}

