include <../lib/common.scad>

//--------------------------------------------------------------------------------------------------
module back_panel()
{
    color([1, 0, 0])
    cube([12, 21, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module bottom_board()
{
    color([0,1,1])
    cube([3.5, 21, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module front_panel()
{
    color([0,0,1])
    cube([5, 22.5, 0.75]);
}

//--------------------------------------------------------------------------------------------------
module side_panel()
{
    translate([0, 12, 0.75])
    {
        rotate([180, 0, 0])
        {
            color([0, 1, 0])
            rect_cut(4.25, 12, 0.75, 2, 7);
        }
    }
}

//--------------------------------------------------------------------------------------------------
// Render
//--------------------------------------------------------------------------------------------------
translate([0, 0, 0])
{
    //----------------------------------------------------------------------------------------------
    // Back panel
    //----------------------------------------------------------------------------------------------
    translate([-0.75, 0, 12])
    {
        rotate([0, 90, 0])
        {
            back_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Bottom board
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 0])
    {
        bottom_board();
    };

    //----------------------------------------------------------------------------------------------
    // Front panel
    //----------------------------------------------------------------------------------------------
    translate([3.5, -0.75, 5])
    {
        rotate([0, 90, 0])
        {
            front_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Left panel
    //----------------------------------------------------------------------------------------------
    translate([-0.75, 0, 0])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };

    //----------------------------------------------------------------------------------------------
    // Right panel
    //----------------------------------------------------------------------------------------------
    translate([-0.75, 21.75, 0])
    {
        rotate([90, 0, 0])
        {
            side_panel();
        }
    };
}



//--------------------------------------------------------------------------------------------------
// Draw Parts
//--------------------------------------------------------------------------------------------------
*translate([0, -40, 0])
{
    //----------------------------------------------------------------------------------------------
    // Back panel
    //----------------------------------------------------------------------------------------------
    translate([0, 0, 0])
    {
        back_panel();

        translate([0, 22, 0])
        {
            arrow_x(12);
        };

        translate([-1, 0, 0])
        {
            arrow_y(21);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Bottom board
    //----------------------------------------------------------------------------------------------
    translate([16, 0, 0])
    {
        bottom_board();

        translate([0, 22, 0])
        {
            arrow_x(3.5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(21);
        }
    };

    //----------------------------------------------------------------------------------------------
    // Front panel
    //----------------------------------------------------------------------------------------------
    translate([25, 0, 0])
    {
        front_panel();

        translate([0, 23.5, 0])
        {
            arrow_x(5);
        };

        translate([-1, 0, 0])
        {
            arrow_y(22.5);
        }
    };

    //----------------------------------------------------------------------------------------------
    // Left panel
    //----------------------------------------------------------------------------------------------
    translate([35, 0, 0])
    {
        side_panel();

        translate([0, -2, 0])
        {
            arrow_x(4.25);
        };

        translate([-1, 0, 0])
        {
            arrow_y(12);
        };

        translate([0, 13, 0])
        {
            arrow_x(2);
        };

        translate([6.25, 0, 0])
        {
            arrow_y(5);
        };
    };

    //----------------------------------------------------------------------------------------------
    // Right panel
    //----------------------------------------------------------------------------------------------
    translate([46, 0, 0])
    {
        side_panel();

        translate([0, -2, 0])
        {
            arrow_x(4.25);
        };

        translate([-1, 0, 0])
        {
            arrow_y(12);
        };

        translate([0, 13, 0])
        {
            arrow_x(2);
        };

        translate([6.25, 0, 0])
        {
            arrow_y(5);
        };
    };
}
